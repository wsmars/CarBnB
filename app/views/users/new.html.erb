<h2>Sign Up</h2>

<form action="<%= users_url %>" method="post">
  <%= auth_token_input %>

  <label>
    Username
    <input type="text" name="user[username]" value="">
  </label>
  </br>

  <label>
    Password
    <input type="password" name="user[password]" value="">
  </label>
  </br>

  <label>
    Confirm Password
    <input type="password" name="user[password_confirmation]" value="">
  </label>
  </br>

  <label>
    Email
    <input type="text" name="user[email]" value="">
  </label>
  </br>

  <select name="user[user_type]">
    <option value="client">Need a Car?</option>
    <option value="hoster" selected>Become a Hoster</option>
  </select>
  </br>

  <input type="submit" value="Sign Up">

</form>
